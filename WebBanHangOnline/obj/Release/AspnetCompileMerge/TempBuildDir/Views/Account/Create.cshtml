@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Đăng ký Tài khoản";
}
<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<div class="container" style=" margin-top:160px;">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title.</h2>

            <div class="card-body">
                @using (Html.BeginForm("Create", "Account", FormMethod.Post))
                {
                    @Html.ValidationSummary(false)
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Tài khoản</label>
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Họ tên</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Quyền</label>
                        @*@Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "-Chọn quyền-", new { @class = "form-control" })*@
                        @Html.HiddenFor(x => x.Role == "Customer");
                    </div>
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Nhập lại Mật khẩu</label>
                        @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Thêm mới</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
